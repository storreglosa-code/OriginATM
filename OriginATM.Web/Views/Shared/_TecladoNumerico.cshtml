@* Recibe el id del input como parámetro *@
@model string

<div class="keypad">
    @for (int i = 1; i <= 9; i++)
    {
        <button type="button" class="btn btn-primary mb-2" onclick="agregarDigito('@i', '@Model')">@i</button>
        if (i % 3 == 0)
        {
            <br />
        }
    }
    <button type="button" class="btn btn-primary mb-2" onclick="agregarDigito('0', '@Model')">0</button>
    <button type="button" class="btn btn-outline-dark mb-2" onclick="limpiar('@Model')">Limpiar</button>
    
</div>